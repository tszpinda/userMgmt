<div class="panel panel-default tutorials-panel">
    <div class="panel-heading">New Tutorial
        <div class="btn-group pull-right">
            <button type="submit" id="save" class="btn btn-primary btn-sm" {{action "createTutorial"}}>Create</button>
            {{#link-to "tutorials" class="btn btn-default btn-sm btn-back"}}Back{{/link-to}}
        </div>
    </div>
        <div class="panel-body">
            <form {{action createTutorial on="submit"}} class="form-horizontal narrow" role="form">
                <div class="row-fluid">
                    <div class="form-group">
                        <label for='name'>Name</label>
                        {{input value=name id='name' class='form-control'}}
                    </div>
                    <div class="form-group">
                        <label for='domain'>Domain</label>
                        {{input value=domain id='domain' class='form-control'}}
                    </div>
                    <div class="form-group">
                        <label for='page'>Page</label>
                        {{input value=page id='page' class='form-control'}}
                </div>
            </div>
        </form>
    </div>
</div>
